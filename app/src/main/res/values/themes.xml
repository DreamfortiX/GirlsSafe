<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Gamified" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondary_dark</item>
        <item name="colorOnSecondary">@color/white</item>
        
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">true</item>
        
        <!-- Navigation bar color -->
        <item name="android:navigationBarColor">@android:color/transparent</item>
        
        <!-- Surface colors -->
        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/black</item>
        <item name="android:colorBackground">@color/white</item>
        <item name="colorSurfaceVariant">@color/surface_variant</item>
        <item name="colorOnSurfaceVariant">@color/on_surface_variant</item>
        
        <!-- Error colors -->
        <item name="colorError">@color/error</item>
        <item name="colorOnError">@color/white</item>

        <!-- Outline -->
        <item name="colorOutline">@color/outline</item>
        
        <!-- Component styles -->
        <item name="bottomNavigationStyle">@style/Widget.Gamified.BottomNavigationView</item>
        <item name="materialCardViewStyle">@style/Widget.Gamified.CardView</item>
        <item name="materialButtonStyle">@style/Widget.Gamified.Button</item>
        
        <!-- Text Appearances -->
        <item name="textAppearanceHeadline6">@style/TextAppearance.Gamified.Headline6</item>
        <item name="textAppearanceSubtitle1">@style/TextAppearance.Gamified.Subtitle1</item>
        <item name="textAppearanceBody1">@style/TextAppearance.Gamified.Body1</item>
        <item name="textAppearanceButton">@style/TextAppearance.Gamified.Button</item>
        <item name="textAppearanceCaption">@style/TextAppearance.Gamified.Caption</item>
        
        <!-- Shape Appearances -->
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.Gamified.SmallComponent</item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.Gamified.MediumComponent</item>
        
<!--        &lt;!&ndash; Bottom Navigation Text Appearance &ndash;&gt;-->
<!--        <item name="textAppearanceBottomNavigation">@style/TextAppearance.BottomNavigationView</item>-->
<!--        <item name="textAppearanceBottomNavigationActive">@style/TextAppearance.BottomNavigationView.Active</item>-->
    </style>
    
    <!-- Light Theme Variant -->
    <style name="Theme.Gamified.Light" parent="Theme.Gamified">
        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/black</item>
        <item name="android:colorBackground">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>
    
    <!-- Dark Theme Variant -->
    <style name="Theme.Gamified.Dark" parent="Theme.Gamified">
        <item name="colorSurface">@color/surface_dark</item>
        <item name="colorOnSurface">@color/on_surface_dark</item>
        <item name="android:colorBackground">@color/background_dark</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>

    <!-- Bottom Navigation View -->
    <style name="Widget.Gamified.BottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="itemIconTint">@color/selector_bottom_nav_colors</item>
        <item name="itemTextColor">@color/selector_bottom_nav_colors</item>
        <item name="itemTextAppearanceActive">@style/TextAppearance.BottomNavigationView.Active</item>
        <item name="itemTextAppearanceInactive">@style/TextAppearance.BottomNavigationView</item>
        <item name="elevation">8dp</item>
        <item name="android:background">@drawable/bg_rounded_top</item>
        <item name="itemBackground">@android:color/transparent</item>
    </style>
    
    <!-- Card View -->
    <style name="Widget.Gamified.CardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">#C7A2A2</item>
        <item name="cardForegroundColor">@android:color/transparent</item>
        <item name="cardElevation">2dp</item>
        <item name="strokeColor">#3C5162</item>
        <item name="strokeWidth">1dp</item>
        <item name="cardCornerRadius">12dp</item>
        <item name="rippleColor">@color/primary_light</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>
    
    <!-- Button -->
    <style name="Widget.Gamified.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:textAppearance">?attr/textAppearanceButton</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingStart">24dp</item>
        <item name="android:paddingEnd">24dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="cornerRadius">8dp</item>
    </style>

    <!-- Text Appearances -->
    <style name="TextAppearance.Gamified.Headline6" parent="TextAppearance.Material3.HeadlineSmall">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:letterSpacing">0.01</item>
    </style>

    <style name="TextAppearance.Gamified.Subtitle1" parent="TextAppearance.Material3.TitleMedium">
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">0.01</item>
    </style>

    <style name="TextAppearance.Gamified.Body1" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:textSize">14sp</item>
        <item name="android:letterSpacing">0.01</item>
    </style>

    <style name="TextAppearance.Gamified.Button" parent="TextAppearance.Material3.LabelLarge">
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">0.01</item>
    </style>

    <style name="TextAppearance.Gamified.Caption" parent="TextAppearance.Material3.BodySmall">
        <item name="android:textSize">12sp</item>
        <item name="android:letterSpacing">0.01</item>
    </style>

    <!-- Switch Style -->
    <style name="Widget.Gamified.Switch" parent="Widget.Material3.CompoundButton.Switch">
        <item name="useMaterialThemeColors">true</item>
        <item name="android:minWidth">48dp</item>
    </style>
    
    <!-- Shape Appearances -->
    <style name="ShapeAppearance.Gamified.SmallComponent" parent="ShapeAppearance.Material3.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">4dp</item>
    </style>
    
    <style name="ShapeAppearance.Gamified.MediumComponent" parent="ShapeAppearance.Material3.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>
    <!-- Bottom Navigation Text Styles -->
    <style name="TextAppearance.BottomNavigationView" parent="TextAppearance.AppCompat.Caption">
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">0.01</item>
    </style>

    <style name="TextAppearance.BottomNavigationView.Active" parent="TextAppearance.BottomNavigationView">
        <item name="android:textSize">13sp</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
    </style>

</resources>