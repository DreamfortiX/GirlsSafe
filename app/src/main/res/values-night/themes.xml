<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Gamified" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!-- Material 3 theme attributes -->
        <item name="materialThemeOverlay">@style/ThemeOverlay.Gamified.Material3</item>
        <!-- Material 3 color scheme -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryContainer">@color/primary_light</item>
        <item name="colorOnPrimary">@color/on_primary</item>
        <item name="colorOnPrimaryContainer">@color/on_primary</item>

        <item name="colorSecondary">@color/secondary</item>
        <item name="colorOnSecondary">@color/on_secondary</item>
        <item name="colorSecondaryContainer">@color/surface</item>
        <item name="colorOnSecondaryContainer">@color/on_surface</item>

        <item name="android:colorBackground">@color/background</item>
        <item name="colorOnBackground">@color/on_background</item>
        <item name="colorSurface">@color/surface</item>
        <item name="colorOnSurface">@color/on_surface</item>

        <item name="colorError">@color/error</item>
        <item name="colorOnError">@color/on_error</item>

        <!-- Status bar and navigation bar -->
        <item name="android:statusBarColor">@color/black</item>
        <item name="android:navigationBarColor">@color/black</item>
        <item name="android:enforceNavigationBarContrast">false</item>
        <item name="android:enforceStatusBarContrast">false</item>
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowTranslucentNavigation">false</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowLightStatusBar">false</item>

        <!-- Component styles -->
        <item name="materialButtonStyle">@style/Widget.Gamified.Button</item>
        <item name="materialCardViewStyle">@style/Widget.Gamified.MaterialCardView</item>
        <item name="bottomNavigationStyle">@style/Widget.Gamified.BottomNavigationView</item>
        <item name="cardViewStyle">@style/Widget.Gamified.CardView</item>

        <!-- Text Appearance -->
        <item name="textAppearanceHeadline6">@style/TextAppearance.Gamified.Headline6</item>
        <item name="textAppearanceSubtitle1">@style/TextAppearance.Gamified.Subtitle1</item>
        <item name="textAppearanceBody1">@style/TextAppearance.Gamified.Body1</item>
        <item name="textAppearanceButton">@style/TextAppearance.Gamified.Button</item>

        <!-- Shape Appearance -->
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.Gamified.SmallComponent</item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.Gamified.MediumComponent</item>
    </style>

    <style name="Theme.Gamified" parent="Base.Theme.Gamified" />

    <!-- Material 3 Theme Overlay -->
    <style name="ThemeOverlay.Gamified.Material3" parent="">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorOnPrimary">@color/on_primary</item>
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondary_variant</item>
        <item name="colorOnSecondary">@color/on_secondary</item>
        <item name="android:colorBackground">@color/background</item>
        <item name="colorOnBackground">@color/on_background</item>
        <item name="colorSurface">@color/surface</item>
        <item name="colorOnSurface">@color/on_surface</item>
        <item name="colorError">@color/error</item>
        <item name="colorOnError">@color/on_error</item>
    </style>

    <!-- Bottom Navigation Style -->
    <style name="Widget.Gamified.BottomNavigationView" parent="Widget.Design.BottomNavigationView">
        <item name="itemIconTint">@color/bottom_nav_colors</item>
        <item name="itemTextColor">@color/bottom_nav_colors</item>
        <item name="itemTextAppearanceActive">@style/TextAppearance.Gamified.Caption</item>
        <item name="itemTextAppearanceInactive">@style/TextAppearance.Gamified.Caption</item>
        <item name="android:background">@drawable/bg_rounded_top</item>
        <item name="elevation">8dp</item>
    </style>

    <!-- Button Style -->
    <style name="Widget.Gamified.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:textAppearance">?attr/textAppearanceButton</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingStart">24dp</item>
        <item name="android:paddingEnd">24dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="shapeAppearance">?attr/shapeAppearanceMediumComponent</item>
    </style>

    <!-- CardView Style -->
    <style name="Widget.Gamified.CardView" parent="@style/Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/card_background</item>
        <item name="cardElevation">4dp</item>
        <item name="cardCornerRadius">12dp</item>
        <item name="cardPreventCornerOverlap">true</item>
        <item name="cardUseCompatPadding">true</item>
    </style>

    <!-- MaterialCardView Style -->
    <style name="Widget.Gamified.MaterialCardView" parent="@style/Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/card_background</item>
        <item name="cardForegroundColor">@android:color/transparent</item>
        <item name="cardElevation">2dp</item>
        <item name="strokeColor">@color/card_stroke</item>
        <item name="strokeWidth">1dp</item>
        <item name="cardCornerRadius">12dp</item>
        <item name="rippleColor">@color/primary_light</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <!-- Text Appearances -->
    <style name="TextAppearance.Gamified.Headline6" parent="TextAppearance.Material3.HeadlineSmall">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:letterSpacing">0.01</item>
    </style>

    <style name="TextAppearance.Gamified.Subtitle1" parent="TextAppearance.Material3.TitleMedium">
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">0.01</item>
    </style>

    <style name="TextAppearance.Gamified.Body1" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:textSize">14sp</item>
        <item name="android:letterSpacing">0.01</item>
    </style>

    <style name="TextAppearance.Gamified.Caption" parent="TextAppearance.Material3.BodySmall">
        <item name="android:textSize">12sp</item>
        <item name="android:letterSpacing">0.01</item>
    </style>

    <style name="TextAppearance.Gamified.Button" parent="TextAppearance.Material3.LabelLarge">
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">0.01</item>
    </style>

    <!-- Shape Appearances -->
    <style name="ShapeAppearance.Gamified.SmallComponent" parent="ShapeAppearance.Material3.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>

    <style name="ShapeAppearance.Gamified.MediumComponent" parent="ShapeAppearance.Material3.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">12dp</item>
    </style>

    <!-- Switch Style -->
    <style name="Widget.Gamified.Switch" parent="Widget.MaterialComponents.CompoundButton.Switch">
        <item name="useMaterialThemeColors">false</item>
        <item name="thumbTint">@color/switch_thumb</item>
        <item name="thumbTintMode">src_over</item>
        <item name="trackTint">@color/switch_track_tint</item>
        <item name="trackTintMode">src_over</item>
        <item name="android:minWidth">48dp</item>
        <item name="android:minHeight">32dp</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingEnd">8dp</item>
    </style>

    <!-- Settings Theme -->
    <style name="ThemeOverlay.Gamified.Settings" parent="">
        <item name="colorSurface">@color/surface</item>
        <item name="android:textColorPrimary">@color/on_surface</item>
        <item name="android:textColorSecondary">@color/on_surface_variant</item>
        <item name="colorControlActivated">@color/primary</item>
        <item name="colorControlHighlight">@color/primary_light</item>
        <item name="switchStyle">@style/Widget.Gamified.Switch</item>
    </style>
</resources>